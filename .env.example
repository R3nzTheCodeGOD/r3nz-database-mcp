# Database Configuration
# =======================

# Database type: postgres or mssql
DATABASE_TYPE=mssql

# Connection settings
DATABASE_HOST=localhost
DATABASE_PORT=1433
DATABASE_NAME=mydb
DATABASE_USER=sa
DATABASE_PASSWORD=your_password_here

# Optional settings
DATABASE_USE_TLS=false
DATABASE_TRUST_CERT=false
DATABASE_POOL_SIZE=10

# Logging
# =======
# Set log level: trace, debug, info, warn, error
RUST_LOG=r3nz_database_mcp=info
